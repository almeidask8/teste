@model InterestsCalculatorAPP.ViewModels.HomeViewModel

@{ 
    string Message = TempData["Message"] as string;
}

<div class="card calc-card">
    <div class="card-header">
        <h2>Interests Calculator</h2>
    </div>
    <div class="card-body">
        <form method="post" asp-action="calc">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InitivalValue">Initival Value:</label>
                <input asp-for="InitivalValue" type="number" min="0" class="form-control" />
                <span asp-validation-for="InitivalValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time">Time:</label>
                <input asp-for="Time" type="number" min="0" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model != null)
                {
                    <label asp-for="FinalValue">Result: @Model.FinalValue</label>
                }
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="button" onclick="location.href='@Url.Action("ShowMeYourCode", "Home")'" class="btn btn-warning">Show Source Code</button>
        </form>
    </div>
</div>

<br />

@if (!string.IsNullOrEmpty(Message))
{
    <div class="alert alert-danger" role="alert">
        @Message;
    </div>
}